    /* Theme switch container */
    .dm-switch-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 10px;
        justify-content: flex-end;
        height: "100%";
        right: 10px;
        z-index: 1000;
    }

    .dm-switch {
        position: relative;
        display: inline-block;
        width: 60px;
        height: 34px;
    }

    .dm-switch input {
        opacity: 0;
        width: 0;
        height: 0;
    }

    .dm-slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: .4s;
        border-radius: 34px;
    }

    .dm-slider:before {
        position: absolute;
        content: "";
        height: 26px;
        width: 26px;
        left: 4px;
        bottom: 4px;
        background-color: white;
        transition: .4s cubic-bezier(0, 0.98, 0.31, 1);
        border-radius: 50%;
    }

    .dm-switch input:checked+.dm-slider {
        background-color: #666666;
    }

    .dm-switch input:checked+.dm-slider:before {
        transform: translateX(26px);
    }

    /* Dark mode styles - only applied when body has .dm-enabled class */
    body.dm-enabled {
        background-color: var(--dm-dark-bg-primary);
        color: var(--dm-dark-text-primary);
    }

    body.dm-enabled .wrapper {
