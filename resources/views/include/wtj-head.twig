        color: var(--dm-dark-text-primary);
        border: 1px solid var(--dm-dark-border-color);
    }

    body.dm-enabled .submit:hover,
    body.dm-enabled .button-container:hover {
        background-color: var(--dm-dark-button-hover);
    }

    body.dm-enabled .button-text {
        color: var(--dm-dark-text-primary);
    }

    body.dm-enabled .img {
